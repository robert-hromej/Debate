group :test do
  gem "database_cleaner", "0.6.7"
  # source: https://github.com/timcharper/spork
  # description:
  #   -->Spork loads the environment once, and then maintains a pool of processes for running future tests.
  #   -->Spork is particularly useful when combined with Autotest.
  gem 'spork', '0.9.0.rc9'
  # source: https://github.com/jtrupiano/timecop
  # description:
  #   -->This will freeze time for better testing issue
  gem "timecop"
end
