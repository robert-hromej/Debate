<div class="comment">
  <div class="comment_header">
    <p>
      <%= comment.created_at %>
    </p>
  </div>

  <p>
    <%= comment.body %>
  </p>

  <div id="comment_votes_counter_<%= comment.id %>">
    <%= comment.counter %>
  </div>
  <div id="comment_vote_<%= comment.id %>">
    <%= comment_vote_button(comment) %>
  </div>
  <br/>
</div>