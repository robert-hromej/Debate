<div class="header">
  <h1><span><a href="<%=root_path %>">Our <span id="color">Debate</span> Project</a></span></h1>

  <p id="about">Lorem ipsum dolor sit amet</p>
  <!--===========================================================================================-->
  <% if controller.authorized? %>
      <div id="user_section">
        <div id="greeting">
          <h3>
            <%= t('welcome') %>
            <%= link_to controller.current_user.screen_name, controller.current_user.profile_url, :class => "welcome_link" %>
          </h3>
        </div>
      </div>
  <% end %>

  <div id="menu-box">
    <ul id="web">
      <% if controller.authorized? %>
          <li>
            <%= link_to t(:logout), logout_url, {:id => "logout"} %>
          </li>
    <% else %>
          <li>
            <%= link_to image_tag("/images/twitter_button.gif"), login_url, :id => "twitter_login_but" %>
          </li>
    <% end %>

      <li>
        <%= link_to t('all_debates'), debate_questions_path %>
      </li>
      <li>
        <%= link_to t('home'), root_url %>
      </li>
    </ul>

    <div id="system_message"> <%= system_messages %> </div>
  </div>
</div>