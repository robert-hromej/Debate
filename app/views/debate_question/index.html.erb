<% @debates.each do |debat| %>
    <%= debat.body %>

    <%= button_to "Yes(#{debat.yes_count})", vote_debate_vote_path(debat.id, :current_vote => 1) %>
    <%= button_to "No(#{debat.no_count})", vote_debate_vote_path(debat.id, :current_vote => -1) %>
    <%= button_to "Neutral(#{debat.neutral_count})", vote_debate_vote_path(debat.id, :current_vote => 0) %>

    <br>
<% end %>

<%= will_paginate @debates %>